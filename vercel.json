{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "env": {
    "DEMO_MODE": "1"
  },
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/frontend/$1"
    },
    {
      "src": "^/$",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/api/snapshot",
      "dest": "/backend/main.py"
    },
    {
      "src": "/health",
      "dest": "/backend/main.py"
    },
    {
      "src": "/debug/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/load-all-satellites",
      "dest": "/backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
